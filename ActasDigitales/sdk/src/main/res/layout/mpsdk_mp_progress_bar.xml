<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ui_spinner_container"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:layout_gravity="center"
              android:background="@color/mpsdk_transparent"
              android:gravity="center"
              android:orientation="vertical">

    <com.mercadopago.customviews.MPLoadingSpinner
            android:id="@+id/ui_spinner"
            android:layout_width="@dimen/mpsdk_progress_size"
            android:layout_height="@dimen/mpsdk_progress_size"
            app:mpsdk_ui_primaryColor="@color/colorAccent"
            app:mpsdk_ui_secondaryColor="@color/colorAccent"
            app:mpsdk_ui_stroke="@dimen/mpsdk_progress_stroke"/>

</LinearLayout>