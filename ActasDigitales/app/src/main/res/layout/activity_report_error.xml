<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_report_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/regular_background"
    tools:context="com.example.lfarias.actasdigitales.Activities.ReportErrorActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese los datos para el reporte del error al Archivo General del Registro"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/instructions_error"
                android:textSize="15sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/tipoActa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="18sp"
                    android:text="Tipo Acta: " />

                <Spinner
                    android:id="@+id/spinner_report"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColorHint="@color/white"
                    app:hintTextAppearance="@style/mytext"
                    app:errorTextAppearance="@style/mytext"
                    app:theme="@style/mytext">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/año_acta"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:hint="Año de Acta"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColorHint="@color/white"
                    app:hintTextAppearance="@style/mytext"
                    app:errorTextAppearance="@style/mytext"
                    app:theme="@style/mytext">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/nro_acta"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:hint="Nro. de Acta"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/mytext"
                app:errorTextAppearance="@style/mytext"
                app:theme="@style/mytext">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nro_libro"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:hint="Nro. de Libro"
                    android:inputType="number"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/nombre_prop_acta_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/mytext"
                app:errorTextAppearance="@style/mytext"
                app:theme="@style/mytext">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nombre_prop_acta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:hint="Nombre propietario de Acta"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/apellido_prop_acta_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/mytext"
                app:errorTextAppearance="@style/mytext"
                app:theme="@style/mytext">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/apellido_prop_acta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:hint="Apellido propietario de Acta"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/obs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="@string/observaciones_adicionales"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Ingrese datos adicionales que considere de ayuda para agilizar el proceso de resolución del error reportado"
                android:textSize="15sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/observaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_enviar_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:text="Enviar reporte de error"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
